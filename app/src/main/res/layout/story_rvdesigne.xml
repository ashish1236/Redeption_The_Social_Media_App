<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/storymodel"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginLeft="@dimen/_5mdp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    android:background="@color/transparent"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <View
        android:id="@+id/view13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/storybackground"
        app:layout_constraintBottom_toBottomOf="@+id/profie"
        app:layout_constraintLeft_toLeftOf="@+id/profie"
        app:layout_constraintRight_toRightOf="@+id/profie"

        app:layout_constraintTop_toTopOf="@+id/profie" />

    <View
        android:id="@+id/whitespace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        android:layout_margin="1.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profie"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="4dp" />

    <ImageView
        android:id="@+id/storytype"
        android:layout_width="45dp"
        android:layout_height="13dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profie" />

    <TextView
        android:id="@+id/username"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:gravity="center_horizontal"
        android:text="Ashish"
        android:background="@drawable/toucheffecta"

        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profie"
        app:layout_constraintStart_toStartOf="@+id/profie"
        app:layout_constraintTop_toBottomOf="@+id/profie" />


</androidx.constraintlayout.widget.ConstraintLayout>

