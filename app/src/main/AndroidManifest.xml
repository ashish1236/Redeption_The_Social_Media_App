<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.menga.Redeption">
    <!-- jay sri Ganesh -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".Privacyactivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Usersfriendactivity"
            android:exported="false" />
        <activity
            android:name=".Activities.editpohoto"
            android:exported="false" />
        <activity
            android:name=".Activities.StarsinfoActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AboutusActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.ChartActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Saved_posts_Activity"
            android:exported="false" />
        <activity
            android:name=".Activities.UsersProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LikesActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.Deletedposts"
            android:exported="false" />
        <activity
            android:name=".Activities.SetingsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.EditPersonalDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.EditAccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.IntroActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".Activities.CommentActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Activities.CreateAccount"
            android:exported="true" />
        <activity
            android:name=".Activities.Login"
            android:exported="true"
            android:noHistory="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorStickerActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorTextActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorCropActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorDrawActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
    </application>

</manifest>